<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="77dp"
        android:layout_marginBottom="74dp"
        android:text="@string/tishi"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sure_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="202dp"
        android:text="@string/sure"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/student"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="135dp"
        android:layout_marginBottom="135dp"
        app:layout_constraintBottom_toBottomOf="@+id/sure_s"
        app:layout_constraintStart_toStartOf="@+id/sure_s"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <RadioButton
            android:id="@+id/TouchActivity_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/TouchActivity" />

        <RadioButton
            android:id="@+id/GesturesActivity_g"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/GesturesActivity"
            tools:layout_editor_absoluteX="175dp"
            tools:layout_editor_absoluteY="219dp" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>